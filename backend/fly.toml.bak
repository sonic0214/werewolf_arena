# Fly.io configuration for Werewolf Arena Backend

app = "werewolf-arena-backend"
primary_region = "sin"

[build]
  dockerfile = "Dockerfile"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[http_service.checks]]
  interval = "15s"
  timeout = "10s"
  grace_period = "5s"
  method = "GET"
  path = "/health"

[http_service.checks.match]
  status = [200]

[http_service.concurrency]
  type = "requests"
  soft_limit = 100
  hard_limit = 120

# WebSocket support
[[services]]
  protocol = "tcp"
  internal_port = 8000
  processes = ["app"]

[[services.ports]]
  handlers = ["proxy_proto"]
  port = 443

[[services.ports]]
  handlers = ["tls", "http"]
  port = 80

[[services.tcp_checks]]
  interval = "15s"
  timeout = "10s"
  grace_period = "1s"

[[vm]]
  memory = "512mb"
  cpu_kind = "shared"
  cpus = 1

# Environment variables
[env]
  PYTHONPATH = "/app"
  PYTHONUNBUFFERED = "1"
  PORT = "8000"

# Secrets (set via flyctl secrets set)
# SILICONFLOW_API_KEY = "your_siliconflow_key" (推荐)
# OPENAI_API_KEY = "your_openai_key"
# ANTHROPIC_API_KEY = "your_anthropic_key"

# Mount for logs
[mounts]
  source = "werewolf_logs"
  destination = "/app/logs"

[deploy]
  strategy = "canary"